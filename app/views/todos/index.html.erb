<h1>Todos#index</h1>
<p>Find me in app/views/todos/index.html.erb</p>

<%= link_to "Add a new todo", new_todo_path %>

<ul class="todos">
    <% @todos.each do |todo| %>
    <li class="<%= "completed" if todo.completed? %>">
        <%= todo.title %>
        <%= button_to "Mark complete", todo_completion_path(todo) %>
    </li>
    <% end %>
</ul>